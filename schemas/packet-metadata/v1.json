{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://cpm.dev/schemas/packet-metadata/v1.json",
  "title": "CPM Packet Metadata v1",
  "type": "object",
  "required": [
    "schema",
    "schema_version",
    "packet",
    "payload"
  ],
  "properties": {
    "schema": {
      "type": "string",
      "const": "cpm.packet.metadata"
    },
    "schema_version": {
      "type": "string",
      "const": "1.0"
    },
    "packet": {
      "type": "object",
      "required": [
        "name",
        "version"
      ],
      "properties": {
        "name": {
          "type": "string",
          "minLength": 1
        },
        "version": {
          "type": "string",
          "minLength": 1
        },
        "description": {
          "type": "string"
        },
        "tags": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "kind": {
          "type": "string"
        },
        "entrypoints": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "capabilities": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      },
      "additionalProperties": true
    },
    "compat": {
      "type": "object",
      "properties": {
        "os": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "arch": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "cpm_min_version": {
          "type": "string"
        }
      },
      "additionalProperties": true
    },
    "links": {
      "type": "object",
      "additionalProperties": {
        "type": "string"
      }
    },
    "payload": {
      "type": "object",
      "required": [
        "files"
      ],
      "properties": {
        "files": {
          "type": "array",
          "items": {
            "type": "object",
            "required": [
              "name"
            ],
            "properties": {
              "name": {
                "type": "string",
                "minLength": 1
              },
              "digest": {
                "type": "string"
              },
              "size": {
                "type": "integer",
                "minimum": 0
              }
            },
            "additionalProperties": true
          }
        },
        "full_ref": {
          "type": "string"
        }
      },
      "additionalProperties": true
    },
    "source": {
      "type": "object",
      "properties": {
        "manifest_digest": {
          "type": "string"
        },
        "created_at": {
          "type": "string"
        },
        "build": {
          "type": "object"
        }
      },
      "additionalProperties": true
    },
    "payload_root": {
      "type": "string"
    },
    "source_manifest": {
      "type": "object"
    }
  },
  "additionalProperties": true
}
